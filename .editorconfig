# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true
# default indenting is 2 spaces
indent_style = space
indent_size = 2

# PSR says PHP should use 4 spaces
[*.php]
indent_style = space
indent_size = 4
